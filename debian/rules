#!/usr/bin/make -f

export DH_VERBOSE = 1

ROCM_VERSION=6.2.4
ROCM_PATH=/opt/rocm-${ROCM_VERSION}
ROCM_BIN_PATH=${ROCM_PATH}/bin
MAKEOPTS := "-j$(shell nproc)"
TOP_DIR := $(shell pwd)/amd/device-libs
BUILD_PATH := ${TOP_DIR}/rocm-build
DEB_INST_DIR :=  ${TOP_DIR}/debian/rocm-devicelibs

%:
	dh $@

# 6.2.4 -> 60204
override_dh_auto_configure:
	cmake -S ${TOP_DIR} -B ${BUILD_PATH} \
		-DCMAKE_INSTALL_PREFIX=${ROCM_PATH} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_C_COMPILER=${ROCM_BIN_PATH}/clang \
		-DCMAKE_CXX_COMPILER=${ROCM_BIN_PATH}/clang++ \
		-DROCM_DEVICE_LIBS_BITCODE_INSTALL_LOC_NEW="lib/clang/18/lib/amdgcn" \
		-DROCM_DEVICE_LIBS_BITCODE_INSTALL_LOC_OLD="amdgcn" \
		-DCMAKE_PREFIX_PATH="${CMAKE_PREFIX_PATH}:${ROCM_PATH}"


override_dh_auto_build:
	cmake --build $(BUILD_PATH) -- ${MAKEOPTS}

override_dh_auto_install:
	DESTDIR=$(DEB_INST_DIR)/ cmake --build $(BUILD_PATH) -- ${MAKEOPTS} install

override_dh_install:
	echo "dh_install skipped"
